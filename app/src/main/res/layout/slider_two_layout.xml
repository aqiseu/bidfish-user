<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bc_slider2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_slider_2"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_150"
        android:layout_below="@+id/tv_slider_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_slider_2_user" />

    <TextView
        android:id="@+id/tv_slider_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/nunitosansbold"
        android:text="@string/slider_text_2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/default_title_slider" />

    <TextView
        android:id="@+id/tv_det_slider_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_slider_2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/nunitosansregul"
        android:text="@string/desc_slider_3"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="17sp" />




</RelativeLayout>